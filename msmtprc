# Accounts will inherit settings from this section
defaults
auth             on
tls              on
tls_trust_file /usr/share/ca-certificates/mozilla/Equifax_Secure_CA.crt

account warlock
host smtp.gmail.com          
port 587                     
from warlock.gpl@gmail.com     
user warlock.gpl@gmail.com
password zzzzzzzzzzzzzzzzzzz          

account accept
host smtp.gmail.com          
port 587                     
from accept1984@gmail.com     
user accept1984@gmail.com
password xxxxxxxxxxxxx          

logfile ~/.msmtp.log

# A second gmail address
# account    gmail2 : gmail
# from       username2@gmail.com
# user       username2@gmail.com
# password   password2


# Set a default account
account default : warlock
